<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_56"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!--Un comentario en la parte visual de Kotlin-->
    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="@dimen/img_42"
        android:layout_height="@dimen/img_42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />
    <!--La libreria tools es una ayuda visual para poder previsualisar como queda la aplicacion,
    NO SIRVEN PARA trabajarlos o llamarlos en la lÃ³gica-->
    <TextView
        android:id="@+id/tvOrden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        tools:text="Nombre completo"
        app:layout_constraintStart_toEndOf="@id/imgPhoto"
        app:layout_constraintEnd_toStartOf="@id/tvOrden"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>